REGISTER_MUTATOR(lms, false)
{
    MUTATOR_STATIC();
	MUTATOR_ONADD
	{
		lms_Initialize();

        GameRules_limit_score(((!autocvar_g_lms_lives_override) ? -1 : autocvar_g_lms_lives_override));
        GameRules_limit_lead(0);
	}
	return 0;
}

